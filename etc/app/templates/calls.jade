include _tasks-menu

header
    +TasksMenu('my')

if !model.length
    h2(style="text-align: center") Whops! Nothing here so far :-(

each call in model
    .calls.card
        .pull-left(style="margin-right:15px")
            img(width=64 height=64 src=call.proof)
        .cnt
            div
                b= call.task.summary
                | &nbsp;

                i= call.state
                | &nbsp; by &nbsp;

                = call.executor.display_name

            if call.state === 'completed'
                div
                    .btn-group.btn-group-md
                        button.btn.btn-primary.btn-success(data-href="/call/#{call.id}/approve") Approve
                        button.btn.btn-danger(data-href="/call/#{call.id}/decline") Decline
        .clearfix